{
  "name": "@aegntic/ae-studio-mcp",
  "version": "0.1.0",
  "description": "Invisible Animation Intelligence for Frontend Developers - AI-powered GSAP and Three.js tools that feel like superpowers. Research project by AEGNTIC.ecosystems.",
  "main": "index.js",
  "type": "module",
  "bin": {
    "ae-studio-mcp": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "node --test tests/**/*.test.js",
    "test:unit": "node --test tests/unit/**/*.test.js",
    "test:integration": "node --test tests/integration/**/*.test.js",
    "test:performance": "node tests/performance/benchmark.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/ docs/",
    "validate": "node src/tools/validate.js",
    "benchmark": "node tests/performance/benchmark.js"
  },
  "keywords": [
    "mcp",
    "animation", 
    "gsap",
    "threejs",
    "ai",
    "frontend",
