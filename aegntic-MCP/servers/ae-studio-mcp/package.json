      "url": "https://aegntic.ai"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aegntic/ae-studio-mcp.git"
  },
  "homepage": "https://aegntic.studio",
  "bugs": {
    "url": "https://github.com/aegntic/ae-studio-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "gsap": "^3.12.2",
    "three": "^0.160.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": [
    {
      "type": "github",
