# ModContxtPro Environment Configuration

# GitHub OAuth (for GitHub authentication)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# JWT Configuration (for JWT authentication)
JWT_SECRET=your-super-secret-jwt-key
JWT_ISSUER=modcontxtpro
JWT_AUDIENCE=modcontxtpro-api

# API Key Configuration
API_KEY_HEADER=X-API-Key

# Database Configuration (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/modcontxtpro

# Session Configuration
SESSION_TTL=86400  # 24 hours in seconds
SESSION_SECRET=your-session-secret

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Node Environment
NODE_ENV=development

# Port Configuration
PORT=3000

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Analytics (optional)
ANALYTICS_ENABLED=false
ANALYTICS_ENDPOINT=https://analytics.example.com

# Sentry Error Tracking (optional)
SENTRY_DSN=

# Feature Flags
ENABLE_GITHUB_AUTH=true
ENABLE_JWT_AUTH=true
ENABLE_API_KEY_AUTH=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true