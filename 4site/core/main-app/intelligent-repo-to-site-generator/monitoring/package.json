{
  "name": "4site-pro-monitoring",
  "version": "1.0.0",
  "description": "Enterprise monitoring and analytics infrastructure for 4site.pro",
  "private": true,
  "scripts": {
    "monitoring:install": "npm install && npm run setup:all",
    "setup:all": "npm run setup:sentry && npm run setup:datadog && npm run setup:monitoring",
    "setup:sentry": "node scripts/setup-sentry.js",
    "setup:datadog": "node scripts/setup-datadog.js",
    "setup:monitoring": "node scripts/setup-monitoring.js",
    "health:check": "node scripts/health-check.js",
    "dashboard:start": "node dashboard/server.js",
    "dashboard:build": "npm run build:dashboard && npm run build:alerts",
    "build:dashboard": "node scripts/build-dashboard.js",
    "build:alerts": "node scripts/build-alerts.js",
    "alerts:test": "node scripts/test-alerts.js",
    "metrics:collect": "node scripts/collect-metrics.js",
    "reports:generate": "node scripts/generate-reports.js",
    "security:scan": "node scripts/security-scan.js",
    "performance:benchmark": "node scripts/performance-benchmark.js",
    "viral:analytics": "node scripts/viral-analytics.js",
    "business:metrics": "node scripts/business-metrics.js"
  },
  "dependencies": {
    "@sentry/node": "^7.100.0",
    "@sentry/integrations": "^7.100.0",
    "@datadog/browser-rum": "^4.50.0",
    "@datadog/datadog-api-client": "^1.22.0",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "winston-datadog": "^1.4.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^3.0.8",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "nodemailer": "^6.9.8",
    "slack-webhook": "^2.0.3",
    "axios": "^1.6.5",
    "cheerio": "^1.0.0-rc.12",
    "lighthouse": "^11.4.0",
    "puppeteer": "^21.6.1",
    "web-vitals": "^3.5.1",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}