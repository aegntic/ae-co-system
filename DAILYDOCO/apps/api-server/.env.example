# DailyDoco Pro API Server Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-use-openssl-rand-base64-32
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration (when implemented)
DATABASE_URL=postgresql://username:password@localhost:5432/dailydoco_pro
REDIS_URL=redis://localhost:6379

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# File Storage
STORAGE_PATH=./storage
MAX_FILE_SIZE=1073741824  # 1GB in bytes

# Email Configuration (when implemented)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_API_KEY=your-analytics-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.dailydoco.pro

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Feature Flags
ENABLE_TEST_AUDIENCE=true
ENABLE_AI_NARRATION=true
ENABLE_MODEL_SWAPPING=true